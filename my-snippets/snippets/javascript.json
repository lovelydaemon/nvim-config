{
  "function": {
    "prefix": "function",
    "body": [
      "function ${1:name}(${2:params}) {",
      "\t${3}",
      "}"
    ],
    "description": "just a function"
  },
  "console-log": {
    "prefix": "log",
    "body": [
      "console.log(${1})"
    ],
    "description": "shortcut for console.log()"
  },
  "switch": {
    "prefix": "switch",
    "body": [
      "switch (${1}) {",
      "\tcase ${2}:",
      "\t\t${3}",
      "\t\tbreak;",
      "}"
    ],
    "description": "switch case"
  },
  "case": {
    "prefix": "case",
    "body": [
      "case ${1}:",
      "\t${2}",
      "\tbreak;"
    ],
    "description": "case"
  },
  "for": {
    "prefix": "for",
    "body": [
      "for (let i = 0; i < ${1}; i++) {",
      "\t${2}",
      "}"
    ],
    "description": "for loop"
  }
}
